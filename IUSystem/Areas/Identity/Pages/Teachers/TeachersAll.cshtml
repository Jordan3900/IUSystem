@page
@model IUSystem.Areas.Identity.Pages.Teachers.TeachersAllModel
@{
    ViewData["Title"] = "TeachersAll";
}

<h1>All Teachers</h1>

<table class="table">
    <thead style="color: white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="color: white;">
        @foreach (var item in Model.Teachers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-area="Admin" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page-handler="delete" onclick="return confirm('Are you sure you want to delete this item?');"
                       asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

