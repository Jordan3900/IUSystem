@page
@model IUSystem.Areas.Identity.Pages.Lectures.LecturesAddModel
@{
}

<div class="container">
    <h3>Add Lecture</h3>
    <hr />
    <br />
    <form method="post">
        @*<input asp-for="Lecture.Id" type="hidden" />*@
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 text-center">
                <label asp-for="SubjectId"></label>
                <select asp-for="SubjectId" class="form-control">
                    <option selected="true" disabled="disabled">-- Choose Subject --</option>
                    @foreach (var subject in Model.Subjects)
                    {
                        <option value="@subject.Id">@subject.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <label asp-for="StartTime"></label>
                <input asp-for="StartTime"  class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="EndTime"></label>
                <input asp-for="EndTime" class="form-control" />
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-group col-md-6">
                <label asp-for="TeacherId"></label>
                <select asp-for="TeacherId" class="form-control">
                    <option selected="true" disabled="disabled">-- Choose Teacher --</option>
                    @foreach (var teacher in Model.Teachers)
                    {
                        <option value="@teacher.Id">@teacher.FirstName @teacher.LastName</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="RoomId"></label>
                <select asp-for="RoomId" class="form-control">
                    <option selected="true" disabled="disabled">-- Choose room --</option>
                    @foreach (var room in Model.Rooms)
                    {
                        <option value="@room.Id">@room.Name</option>
                    }
                </select>
            </div>
        </div>
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-secondary" href="/Identity/Students/studentsall">Cancel</a>
    </form>
</div>